function generateResponsiveMasonryGridDivs(
  numDivs: number,
  containerWidth: number
): { height: number; width: number }[] {
  const divs = [];
  const columnCount = Math.floor(containerWidth / 200); // Assuming each div is 200px wide
  const columnWidth = containerWidth / columnCount;
  const heights = Array.from({ length: columnCount }, () => 0);

  for (let i = 0; i < numDivs; i++) {
    const shortestColumnIndex = heights.indexOf(Math.min(...heights));
    const height = Math.floor(Math.random() * 200) + 100; // Random height between 100 and 300
    const width = columnWidth - 20; // Adjust width for margin

    divs.push({ height, width });

    heights[shortestColumnIndex] += height + 20; // Adjust height for margin
  }

  return divs;
}

// Example usage
const numDivs = 10;
const containerWidth = 800; // Width of the container in pixels
const divs = generateResponsiveMasonryGridDivs(numDivs, containerWidth);
